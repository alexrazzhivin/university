<web-app version="2.4"
         xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

	<display-name>Spring MVC Application</display-name>

	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>mvc-dispatcher</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>groupsConnector</servlet-name>
		<servlet-class>dev.university.connector.GroupsConnectorServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>studentsConnector</servlet-name>
		<servlet-class>dev.university.connector.StudentsConnectorServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>coursesConnector</servlet-name>
		<servlet-class>dev.university.connector.CoursesConnectorServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>subjectsConnector</servlet-name>
		<servlet-class>dev.university.connector.SubjectsConnectorServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>courseStudentsConnector</servlet-name>
		<servlet-class>dev.university.connector.CourseStudentsConnectorServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>mvc-popup</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>mvc-dispatcher</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>mvc-popup</servlet-name>
		<url-pattern>/popup</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>groupsConnector</servlet-name>
		<url-pattern>/groupsConnector.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>courseStudentsConnector</servlet-name>
		<url-pattern>/courseStudentsConnector.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>studentsConnector</servlet-name>
		<url-pattern>/studentsConnector.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>coursesConnector</servlet-name>
		<url-pattern>/coursesConnector.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>subjectsConnector</servlet-name>
		<url-pattern>/subjectsConnector.do</url-pattern>
	</servlet-mapping>
</web-app>